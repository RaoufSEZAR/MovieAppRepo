@model Movie

<div class="row">
    <div class="col-md-3">
        @*@Html.Partial("_menu",Model.categories)*@
         @await Component.InvokeAsync("CategoriMenu")

    </div>
    <div class="col-md-9">
                    <div class="card mb-3">
                <div class="card-body">
                <div class="row no-gutter">
                <div class="col-md-4">
                    
            <img src="~/img/@Model.ImageUrl"class="card-img" alt="@Model.Description">
            </div>
                <div class="col-md-8">
                
                        <h4 class="card-title">
                        <a asp-action="Details"asp-controller="Home"asp-route-id="@Model.Id">   @Model.Name</a>
                            </h4>
                <p class="card-text">
                @Html.Raw(Model.Description)
                </p>
                    <p class="card-text">
                    <small class="text-muted">3 days ago</small>
                    
                </div>
            </div>


            </div>
        </div>
        </div>
</div>




       